        "type": "number"
      },
      "per_page": {
        "description": "Number of results to return per page (default: 20, max: 100).",
        "type": "number"
      },
      "pipelineId": {
        "description": "The ID of the pipeline (required for list action).",
        "type": "number"
      },
      "projectId": {
        "description": "The ID (integer) or URL-encoded path (string) of the project.",
        "type": "string"
      }
    },
    "required": [
      "action",
      "projectId"
    ]
  },
